<div class="container">
  <div class="header" align="center">
    <br>
    <br>
    <h2>Welcome to Create Your Own Burger</h2>
    <br>
    <br>
    <img src="/assets/img/Cheeseburger.jpg" width="400px" id="burgerImg">
    <br>
    <br>
  </div>
  <div class="row">
    <div class="card col s12">
      <div class="col s5 ">

        <h2>Devour</h2>
        <ul>
          {{#each burgers}}
          {{#unless this.devoured }}
          <li>
            <button class="devour" data-id="{{id}}" data-newDevour="{{devoured}}"><span>Devour The {{burger_name}}!
              </span></button>
          </li>
          {{/unless}}
          {{/each}}
        </ul>
      </div>
      <div class="col s2"></div>
      <div class="col s5 " id="burgerEaten">
        <h2>Yummy!!</h2>
        {{#each burgers}}
        {{#if this.devoured }}
        <li>
          {{burger_name}}<br>
        </li>
        {{/if}}
        {{/each}}
        <br>
      </div>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="card card-panel hoverable">
      <h2 class="center-align">Add a Burger!</h2>
      <form class="create-form">
        <div class="form-group">
          <br>
          <label for="burgerName" class="center-align">What is the name of your burger?</label>
          <input type="text" id="burgerName">
        </div>
        <br>
        <button type="submit" class="addBurger">Add to Order</button>
      </form>
    </div>
  </div>
  <br>
</div>
